<Window x:Class="Darknet.Dataset.Merger.Windows.ClassSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Darknet.Dataset.Merger.Windows"
        mc:Ignorable="d"
        Height="450" Width="250" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lbClasses" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding}"/>
        <Button Content="Accept" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Stretch" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
